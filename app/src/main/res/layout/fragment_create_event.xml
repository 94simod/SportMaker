<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view9"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/mostraData"
        android:layout_marginTop="10dp">
        <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/luogo"
        android:layout_below="@+id/calendarView"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Inserisci luogo" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view10"
        android:layout_alignTop="@+id/view9"
        android:layout_toEndOf="@+id/view9">

        <android.support.design.widget.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prezzo"
            android:ems="10"
            android:hint="Inserisci costo evento"
            android:inputType="numberDecimal"
            android:text="0"
            android:layout_below="@+id/mostraData"
            android:layout_toStartOf="@+id/mostraData"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignStart="@+id/prezzo"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:spinnerMode="dropdown"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mostraData"
        android:src="@android:drawable/ic_menu_today"
        android:layout_below="@+id/view10"
        android:layout_toStartOf="@+id/view11"
        android:layout_marginEnd="28dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mostraOra"
        android:src="@android:drawable/ic_menu_recent_history"
        android:layout_below="@+id/view10"
        android:layout_toEndOf="@+id/mostraData" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view11"
        android:layout_gravity="bottom|right"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:layout_alignTop="@+id/spinner2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero partecipanti"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/prezzo"
        android:layout_alignBottom="@+id/spinner" />

    <!--app:backgroundTint="#303f9f"!-->




</RelativeLayout>